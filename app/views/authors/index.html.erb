<h2>Authors' List</h2>

<table class="table table-striped">
	<tr>
		<th>Author's Name</th>
		<th>Action</th>
	</tr>	

	<% @authors.each do |author| %>
		<tr>
			<td><%= full_name(author) %></td>
			<td><%= link_to 'Edit', edit_author_path(author.id) %> | <%= link_to 'Delete',author_path(author), method: :delete, data: {confirm: "Are you sure you want to delete this author?"}%></td>
		</tr>
	<% end %>
</table>